---
import site from "../content/site.json";

const siteName = site.clinic_name || site.name || "ClÃ­nica Dr. VÃ­ctor Miranda";
const initials = site.initials || "VM";

const {
  title = siteName,
  description = "Medicina estÃ©tica con enfoque en seguridad y resultados naturales.",
} = Astro.props;

const year = new Date().getFullYear();

// Theme
const accent = String(site.accent_color || "#0F766E").trim();
const accent2 = String(site.accent_color_2 || "#06B6D4").trim();

// Global UI (configurable desde /admin si lo agregas)
const bg = String(site.bg_color || "#ffffff").trim();            // âœ… fondo global
const maxWidth = String(site.max_width || "1240px").trim();      // âœ… ancho mÃ¡ximo
const navLinksGap = String(site.nav_links_gap || "16px").trim(); // âœ… separaciÃ³n links

// WhatsApp
const whatsappNumber = String(site.whatsapp || "").replace(/\D/g, "");
const whatsappLink = `https://wa.me/${whatsappNumber}`;

// Booking
const bookingUrl = String(site.booking_url || "").trim() || "/contacto/";

// Logo
const logoImage = String(site.logo_image || "").trim();
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <style>
      :root{
        /* âœ… Layout */
        --max: {maxWidth};

        /* âœ… Padding responsive del contenedor */
        --pad-x: clamp(16px, 3vw, 28px);
        --pad-y: clamp(16px, 2.2vw, 22px);

        /* âœ… Fondo global (todas las pÃ¡ginas) */
        --bg: {bg};

        --text: #0f172a;
        --muted: #475569;
        --line: #e2e8f0;
        --soft: #f8fafc;
        --soft2:#f1f5f9;

        --accent: {accent};
        --accent2: {accent2};

        --radius: 18px;
        --shadow: 0 16px 40px rgba(15,23,42,0.08);

        /* âœ… MenÃº */
        --nav-gap: {navLinksGap};
      }

      *{ box-sizing:border-box; }

      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        color:var(--text);
        background: var(--bg);
        line-height:1.55;
      }

      a{ color: inherit; text-decoration: none; }
      a.link{ text-decoration: underline; text-underline-offset: 3px; }

      .container{
        max-width: var(--max);
        margin: 0 auto;
        padding: var(--pad-y) var(--pad-x);
      }

      /* Header */
      .header{
        position: sticky;
        top: 0;
        z-index: 50;
        background: rgba(255,255,255,.86);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid var(--line);
      }
      .nav{
        display:flex;
        align-items:center;
        gap: 18px; /* un poco mÃ¡s de aire general */
        flex-wrap: wrap;
      }

      .brand{
        display:flex;
        align-items:center;
        gap:10px;
        font-weight: 900;
        letter-spacing: .2px;
      }

      .brand-badge{
        width: 36px;
        height: 36px;
        border-radius: 14px;
        background:
          radial-gradient(90px 40px at 20% 10%, var(--accent2), rgba(255,255,255,0)),
          linear-gradient(135deg, var(--accent), #0f172a);
        color: #fff;
        display:flex;
        align-items:center;
        justify-content:center;
        box-shadow: 0 10px 22px rgba(15,23,42,0.18);
        overflow: hidden;
      }
      .brand-badge img{
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
      }

      .navlinks{
        display:flex;
        gap: var(--nav-gap); /* âœ… separaciÃ³n entre Inicio/Servicios/... */
        flex-wrap: wrap;
      }
      .navlinks a{
        padding: 10px 14px; /* un poco mÃ¡s cÃ³modo */
        border-radius: 12px;
        color: var(--muted);
        font-weight: 700;
      }
      .navlinks a:hover{
        background: var(--soft);
        color: var(--text);
      }

      .nav-cta{
        margin-left:auto;
        display:flex;
        gap:10px;
        flex-wrap: wrap;
      }

      /* Buttons */
      .btn{
        display:inline-flex;
        align-items:center;
        justify-content:center;
        gap:10px;
        padding: 11px 14px;
        border-radius: 14px;
        border: 1px solid var(--line);
        background: #fff;
        color: var(--text);
        font-weight: 800;
        box-shadow: 0 10px 24px rgba(15,23,42,0.05);
      }
      .btn:hover{ background: var(--soft); }

      .btn-primary{
        background: linear-gradient(135deg, var(--accent), var(--accent2));
        border: none;
        color: #fff;
        box-shadow: 0 14px 30px rgba(6,182,212,0.18);
      }
      .btn-primary:hover{ filter: brightness(.97); }

      footer{
        border-top: 1px solid var(--line);
        color: var(--muted);
        padding: 18px 0;
        margin-top: 18px;
      }

      /* Floating WhatsApp */
      .wa-fab{
        position: fixed !important;
        right: 18px !important;
        bottom: 18px !important;
        z-index: 2147483647 !important;
        display: inline-flex !important;
        align-items: center !important;
        gap: 10px !important;
        padding: 12px 14px !important;
        border-radius: 999px !important;
        background: #25D366 !important;
        color: #fff !important;
        font-weight: 900 !important;
        box-shadow: 0 14px 30px rgba(0,0,0,0.18) !important;
      }

      @media (max-width: 860px){
        .nav-cta{ width:100%; margin-left:0; }
        .nav-cta .btn{ flex:1; }
      }
    </style>
  </head>

  <body>
    <header class="header">
      <div class="container">
        <nav class="nav">
          <a class="brand" href="/">
            <span class="brand-badge">
              {logoImage ? <img src={logoImage} alt="Logo" /> : initials}
            </span>
            <span>{siteName}</span>
          </a>

          <div class="navlinks">
            <a href="/">Inicio</a>
            <a href="/servicios/">Servicios</a>
            <a href="/complicaciones/">Complicaciones</a>
            <a href="/contacto/">Contacto</a>
          </div>

          <div class="nav-cta">
            <a class="btn" href={whatsappLink} target="_blank" rel="noreferrer">ðŸ’¬ WhatsApp</a>
            <a class="btn btn-primary" href={bookingUrl} target="_blank" rel="noreferrer">Reservar</a>
          </div>
        </nav>
      </div>
    </header>

    <main>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer>
      <div class="container">
        <small>
          Â© {year} Â· {siteName} Â· {site.city} Â· {site.email} Â·
          <a class="link" href="/politicas/">PolÃ­ticas</a>
        </small>
      </div>
    </footer>

    <a class="wa-fab" href={whatsappLink} target="_blank" rel="noreferrer" aria-label="WhatsApp">
      ðŸ’¬ WhatsApp
    </a>
  </body>
</html>
