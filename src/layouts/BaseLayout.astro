---
const {
  title = "Clínica Dr. Víctor Miranda",
  description = "Medicina estética con enfoque en seguridad y resultados naturales.",
} = Astro.props;

const year = new Date().getFullYear();
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style>
      :root { --max: 980px; }
      body { margin:0; font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; line-height:1.6; color:#111; }
      header, main, footer { max-width: var(--max); margin: 0 auto; padding: 18px; }
      nav { display:flex; gap:14px; align-items:center; flex-wrap:wrap; }
      nav a { text-decoration:none; color:#111; }
      .cta { margin-left:auto; padding:10px 14px; border:1px solid #111; border-radius:12px; }
      .hero { padding: 26px 0 10px; }
      .grid { display:grid; gap:12px; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); }
      .card { border:1px solid #eee; border-radius:14px; padding:16px; }
      footer { border-top:1px solid #eee; color:#555; margin-top: 28px; }
      h1 { margin: 0 0 10px; font-size: 34px; }
      h2 { margin-top: 18px; }
      ul { padding-left: 18px; }
    </style>
  </head>

  <body>
    <header>
      <nav>
        <a href="/">Inicio</a>
        <a href="/servicios/">Servicios</a>
        <a href="/complicaciones/">Complicaciones</a>
        <a href="/contacto/" class="cta">Reservar / Contacto</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <small>© {year} · Clínica Dr. Víctor Miranda</small>
    </footer>
  </body>
</html>
